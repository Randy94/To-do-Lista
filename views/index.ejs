<html>
<head>
    <title>Todo</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="/Style.css" rel="stylesheet">
</head>

<body>

<div class="container">
    <h1>To-Do-list</h1>

    <form action ="/add" method="POST">
        <input type="text" name="newtask" placeholder="add new task">
        <button class= "btn btn-dark"> Add Task </button>

        <h2> Added  </h2>
        <% for( var i = 0; i < task.length; i++){ %>
            <li><input  type="checkbox" name="check" value="<%= task[i] %>" /> <%= task[i] %> </li>
        <% } %>
        <button formaction="/removetask" type="submit" id="top"  class="btn btn-dark"> Remove </button>
    </form>
    <h2> Completed</h2>
    <% for(var i = 0; i < complete.length; i++){ %>
        <li><%= complete[i] %> </li>
    <% } %>
</div>

</body>
</html>